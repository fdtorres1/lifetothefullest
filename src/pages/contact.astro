---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm';
import PatientPortalLink from '../components/PatientPortalLink';
---

<Layout
  title="Contact Us | Life to the Fullest LLC - Schedule a Consultation"
  description="Contact Life to the Fullest LLC to schedule a consultation. Reach us by phone, email, or fill out our contact form. Serving Oak Brook and Orland Park, Illinois."
  canonical="/contact"
>
  <!-- Hero -->
  <section class="bg-gradient-to-br from-[#4F8FE6] to-[#3D7BD6] text-white section-padding">
    <div class="container-custom">
      <h1 class="text-4xl md:text-5xl font-bold mb-4 tracking-tight">Contact Us</h1>
      <p class="text-xl text-blue-50 max-w-3xl font-light">
        We'd love to hear from you. Please fill out the form below or give us a call to schedule a consultation.
      </p>
    </div>
  </section>

  <!-- Contact Form & Info -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
        <!-- Contact Form -->
        <ContactForm client:load />

        <!-- Contact Information -->
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">Get in Touch</h2>
          
          <div class="space-y-6 mb-8">
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">Phone</h3>
              <p>
                <a href="tel:630-294-0288" class="text-[#4F8FE6] hover:underline font-medium text-lg">
                  (630) 294-0288
                </a>
              </p>
            </div>

            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">Email</h3>
              <p>
                <a href="mailto:info@lifetothefullestllc.com" class="text-[#4F8FE6] hover:underline">
                  info@lifetothefullestllc.com
                </a>
              </p>
            </div>

            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Office Hours</h3>
              <div class="bg-gray-50 p-4 rounded-lg">
                <ul class="space-y-2 text-gray-700">
                  <li class="flex justify-between">
                    <span>Monday - Thursday</span>
                    <span class="font-semibold">9:00 am - 8:00 pm</span>
                  </li>
                  <li class="flex justify-between">
                    <span>Friday</span>
                    <span class="font-semibold">9:00 am - 7:00 pm</span>
                  </li>
                  <li class="flex justify-between">
                    <span>Saturday</span>
                    <span class="font-semibold">9:00 am - 5:00 pm</span>
                  </li>
                  <li class="flex justify-between">
                    <span>Sunday</span>
                    <span class="font-semibold">Closed</span>
                  </li>
                </ul>
              </div>
            </div>
          </div>

          <!-- Office Addresses -->
          <div class="space-y-6 mb-8">
            <div>
              <h3 class="text-lg font-semibold text-[#4F8FE6] mb-2">Oak Brook Office</h3>
              <p class="text-gray-700 mb-2">2625 Butterfield Rd., Suite 138S</p>
              <p class="text-gray-700 mb-3">Oak Brook, IL 60523</p>
              <a href="/locations/oak-brook" class="text-[#4F8FE6] hover:underline text-sm">
                View location details →
              </a>
            </div>

            <div>
              <h3 class="text-lg font-semibold text-[#4F8FE6] mb-2">Orland Park Office</h3>
              <p class="text-gray-700 mb-2">11512 W. 183rd Pl. SE</p>
              <p class="text-gray-700 mb-3">Orland Park, IL 60467</p>
              <a href="/locations/orland-park" class="text-[#4F8FE6] hover:underline text-sm">
                View location details →
              </a>
            </div>
          </div>

          <!-- Patient Portal -->
          <div class="bg-[#f0f7f9] p-6 rounded-lg">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Existing Clients</h3>
            <p class="text-gray-700 mb-4 text-sm">
              Existing clients can log in to the secure Patient Portal to manage appointments or message your therapist.
            </p>
            <PatientPortalLink client:load variant="button" className="inline-block text-center w-full" />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Emergency Notice -->
  <section class="section-padding bg-red-50 border-t border-red-200">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto text-center">
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold text-red-800 mb-3">⚠️ Emergency Notice</h3>
          <p class="text-gray-700">
            If you are experiencing a crisis or emergency, do not use this form. Please call <strong>911</strong> or visit your nearest emergency room immediately.
          </p>
          <p class="text-gray-700 mt-2">
            For mental health crisis support, you can also call the National Suicide Prevention Lifeline at <a href="tel:988" class="text-[#4F8FE6] font-semibold hover:underline">988</a>.
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout>

