---
import Layout from '../../layouts/Layout.astro';
import { getStaffMemberBySlug, getAllStaffSlugs } from '../../lib/staff';
import { User, ArrowLeft } from 'lucide-react';

export async function getStaticPaths() {
  const slugs = getAllStaffSlugs();
  return slugs.map((slug) => ({
    params: { slug },
  }));
}

export const prerender = true;

const { slug } = Astro.params;
const member = getStaffMemberBySlug(slug || '');

if (!member) {
  return Astro.redirect('/404', 404);
}

const title = `${member.name} | ${member.credentials} | Life to the Fullest LLC`;
const description = `Meet ${member.name}, ${member.credentials} at Life to the Fullest LLC. ${member.bio.substring(0, 150)}...`;
const canonical = `/team/${slug}`;
---

<Layout title={title} description={description} canonical={canonical}>
  <!-- Hero -->
  <section class="bg-gradient-to-br from-[#4F8FE6] to-[#3D7BD6] text-white section-padding">
    <div class="container-custom">
      <a 
        href="/about" 
        class="inline-flex items-center gap-2 text-blue-50 hover:text-white mb-6 transition-colors"
        aria-label="Back to Our Team page"
      >
        <ArrowLeft class="w-5 h-5" aria-hidden="true" />
        <span>Back to Our Team</span>
      </a>
      <h1 class="text-4xl md:text-5xl font-bold mb-4 tracking-tight">{member.name}</h1>
      <p class="text-xl text-blue-50 font-light">{member.credentials}</p>
    </div>
  </section>

  <!-- Bio Section -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="flex flex-col md:flex-row gap-8 mb-8">
          <div class="flex-shrink-0">
            {member.image ? (
              <div class="w-48 h-48 rounded-full mx-auto md:mx-0 overflow-hidden bg-gray-200">
                <img
                  src={member.image}
                  alt={`${member.name}, ${member.credentials}`}
                  width={192}
                  height={192}
                  class="w-full h-full object-cover object-center"
                  style={{ objectPosition: member.imagePosition || 'center 30%' }}
                  loading="lazy"
                  decoding="async"
                />
              </div>
            ) : (
              <div class="w-48 h-48 bg-gray-200 rounded-full mx-auto md:mx-0 flex items-center justify-center">
                <User class="w-32 h-32 text-gray-400" stroke-width="1.5" />
              </div>
            )}
          </div>
          <div class="flex-1">
            <h2 class="text-2xl font-semibold text-gray-900 mb-2">{member.name}</h2>
            <p class="text-lg text-[#4F8FE6] mb-6">{member.credentials}</p>
          </div>
        </div>
        
        <div class="prose prose-lg max-w-none text-gray-700 whitespace-pre-line leading-relaxed">
          {member.bio}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section-padding bg-gray-50">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Ready to Work with {member.name.split(' ')[0]}?</h2>
        <p class="text-lg text-gray-700 mb-8">
          Contact us today to schedule a consultation and learn more about how we can help you on your journey.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="btn-primary">
            Contact Us
          </a>
          <a href="/about" class="btn-secondary">
            View All Team Members
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

